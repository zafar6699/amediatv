<div class="tab-animes">
    <div class="container">
        <div class="tab-links">
            <ul class="tab-li">
                <% if(category == '') {%>
                    <li>Categoriya (default)</li>
                <%} else {%>
                    <% category.forEach((element, index) => { %>

                        <li <% if(index == 0) { %> class="link__active" <% } %>>
                            <%if(lang === "uz") { %>
                                <button class="btn btn-dark"><%= element.nameuz %></button>
                            <% } %>
                            <%if(lang === "ru") { %>
                               <button class="btn btn-dark"><%= element.nameru %></button>
                            <% } %>
                            <%if(lang == undefined) { %>
                                <button class="btn btn-dark"><%= element.nameuz %></button>
                            <% } %>
                        </li>
                        
                    <% }) %>    
                <% } %> 
                
                
            </ul>
        </div>

        
        <div class="tab-content">
            
            <% if(sortKino == '') {%>
                <div class="col-md-4">
                    <a href="#">
                        <div class="box-border news__item">
                            <img  src="/img/banner_img.png" alt="">
                            <div class="opa"></div>
                            <div class="news__item__title">
                                <h4>default</h4>
                            </div>
                        </div>
                    </a>    
                </div>
            <%} else {%> 
                <% sortKino.forEach((e, index) => { %>
                    <aside <% if(index == 0) { %> class="__active" <% } %> >
                        <div class="tab-inner-box" id="paginate">
                            <% e[0].forEach(item => { %>
                                    <div class="__item">
                                        <a href="/season/<%= item._id %>">
                                            <div class="img__in" style="display: flex; flex-direction: column; align-items: center; justify-content: flex-end;" >
                                                
                                                <div class="opa"></div>
                                                <img src="http://cdn.amediatv.uz<%= item.image %>" alt="">
                                                <h5  style="padding: 3px 8px; z-index: 100; color: white; text-decoration: none; background-color: rgba(51, 51, 51, 0.391); border-radius: 4px;"> <%= item.num %> </h5>
                                                <% if(item.price == "selling") {%> 
                                                    <i style="z-index: 100; font-size: 20px;"  class="text-warning fas fa-crown"></i>
                                                    <% } if(item.price == "free") {%>
                                                        <div></div>
                                                        <% } %> 
                                            </div>
                                            
                                            <h3 >
                                                <%if ( lang === "uz" ) { %>
                                                    <%= item.name.uz %>
                                                <% } %> 
                                                <%if ( lang === "ru" ) { %>
                                                    <%= item.name.ru %>
                                                <% } %> 
                                                <%if ( lang == undefined ) { %>
                                                    <%= item.name.uz %>
                                                <% } %> 
                                            </h3>
                                        </a>  
                                    </div>
                                 
                            <% }); %>


                            
                            <% e[1].forEach(item => { %>
                                <div class="__item">
                                    <a href="/kino/<%= item._id %>">
                                        <div class="img__in">
                                            <% if(item.price == "selling") {%> 
                                                <i style="z-index: 100; font-size: 20px;"  class="text-warning fas fa-crown"></i>
                                                <% } if(item.price == "free") {%>
                                                    <div></div>
                                                    <% } %> 
                                            <div class="opa"></div>
                                            <img src="http://cdn.amediatv.uz<%= item.image %>" alt="">
                                            
                                        </div>
                                        <h3 >
                                            <%if ( lang === "uz" ) { %>
                                                <%= item.name.uz %>
                                            <% } %> 
                                            <%if ( lang === "ru" ) { %>
                                                <%= item.name.ru %>
                                            <% } %> 
                                            <%if ( lang == undefined ) { %>
                                                <%= item.name.uz %>
                                            <% } %> 
                                        </h3>
                                    </a>  
                                </div>
                            <% }); %>
                        </div>
                    </aside>
                <% }); %>
            <% } %> 

           
        </div>
    </div>
</div>
<script src="http://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="/js/jquery.paginate.js"></script>
<script>

    $(document).ready(function(){
        $('#paginate').paginate({
            perPage: 20, 
        });
    })

</script>