                                                <button class="carousel-click click__right" type="button"><i class="fa fa-angle-right"></i></button>
                                                <div class="owl-carousel owl-theme banner-inner-carousel">
                                                    <% item.serial.screens.thumb.forEach(screen_item => { %>
                                                        <div class="item">
                                                            <div class="sm__item">
                                                                <img src="http://cdn.amediatv.uz<%= screen_item %>" alt="">
