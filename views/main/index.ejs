        <button type="button" class="prev-next slider__next"><i class="fa fa-angle-right"></i></button>
        <div class="owl-carousel owl-theme anime-carousel">
        <% for (let item of slider) {%>
            
                    <div class="item">
                        <div class="carousel__item">
                            

                            <img class="carousel-out__img" style="display: block;" src="http://cdn.amediatv.uz<%= item.serial.screens.original[0] %>" alt="" />

                            
