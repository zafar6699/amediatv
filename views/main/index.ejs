<div class="tab-animes">
    <div class="container">
        <div class="tab-links">
            <ul>
                <% category.forEach((element, index) => { %>

                    <li <% if(index == 0) { %> class="link__active" <% } %>>
                        <%if(lang === "uz") { %>
                            <%= element.nameuz %>
                        <% } %>
                        <%if(lang === "ru") { %>
                            <%= element.nameru %>
                        <% } %>
                        <%if(lang == "undefined") { %>
                            <%= element.nameuz %>
                        <% } %>
                    </li>
                    
                <% }); %> 
                
            </ul>
        </div>
        <div class="tab-content">

            <% sortKino.forEach((element, index) => { %>
                <aside <% if(index == 0) { %> class="__active" <% } %> >
                    <div class="tab-inner-box">
                        <% element.forEach(item => { %>
                            
                                <div class="__item">
                                    <a href="/kino/<%= item._id %>">
                                        <div class="img__in">
                                            <div class="opa"></div>
                                            <img src="<%= item.image %>" alt="">
                                        </div>
                                        <h3>
                                            <%if ( lang === "uz" ) { %>
                                                <%= item.name.uz %>
                                            <% } %> 
                                            <%if ( lang === "ru" ) { %>
                                                <%= item.name.ru %>
                                            <% } %> 
                                            <%if ( lang == "undefined" ) { %>
                                                <%= item.name.uz %>
                                            <% } %> 
                                        </h3>
                                    </a>  
                                </div>
                             
                        <% }); %>
                    </div>
                </aside>
            <% }); %>
        </div>
    </div>
</div>


