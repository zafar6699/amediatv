<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/style/error.css">
</head>
<style>
    .permission_denied {
        background: rgb(41, 48, 75);
    }

    .image_111 {
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }


    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        padding-top: 100px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0, 0, 0);
        background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    /* The Close Button */
    .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
    }

    @media (max-width: 768px) {
        .image_111 img {
            width: 100%;
            height: 30vh;
            margin: 40% auto;
        }
    }
</style>

<body style="background-color: rgb(41, 48, 75);">




    <div id="particles-js" class="image_111">
        <!-- <img src="/public/img/warning.jpg" alt=""> -->

        <h3 class="text-white">Ushbu videoni ko'rish uchun:</h3>
        <ul>
            <li class="text-white">Ro'yhatdan o'ting</li>
            <li class="text-white">Ro'yhatdan o'tgach "VIP" tarif sotib oling</li>
        </ul>

        <div class="flex-dir mt-4">
            <button id="myBtn" class="btn btn-warning">Registratsiya</button>

            <% if(anotation=="" ) {%>
                <a href=""></a>
                <% }else if (anotation) {%>
                    <i class="fa fa-eye"></i> <a target="_blank" href="<%= anotation[0].video %> "
                        class="btn btn-warning">
                        <%= anotation[0].name.uz %>
                    </a>
                    <% } %>
        </div>



        <form action="/auth/register" method="POST">
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <div class="modal-body">
                        <div class="form-auth mt-3">
                            <h6>Foydalanuvchi nomi</h6>
                            <input class="form-control" type="text" name="name" id="name"
                                placeholder="Ismingizni kiriting...">
                        </div>
                        <div class="form-auth mt-3">
                            <h6>Email</h6>
                            <input class="form-control" type="email" name="email" id="email"
                                placeholder="Emailni kiriting...">
                        </div>
                        <div class="form-auth mt-3">
                            <h6>Parol</h6>
                            <input class="form-control" type="password" name="password" id="password"
                                placeholder="Parolni kiriting...">
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Ro'yxatdan
                            o'tish</button>
                    </div>
                </div>
            </div>

        </form>
    </div>













    <script>
        var modal = document.getElementById("myModal");
        var btn = document.getElementById("myBtn");
        var span = document.getElementsByClassName("close")[0];
        btn.onclick = function () {
            modal.style.display = "block";
        }
        span.onclick = function () {
            modal.style.display = "none";
        }
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

</body>

</html>